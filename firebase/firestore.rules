rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User documents and all subcollections (assessments, stress_readings, etc.)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Recursive wildcard covers assessments, stress_readings, and any future subcollections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Demo collection for testing (open access)
    match /demo/{document=**} {
      allow read, write: if true;
    }
  }
}
